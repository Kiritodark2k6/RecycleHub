# ===========================================
# RecycleHub Environment Variables
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# MongoDB Atlas Connection
# ===========================================
# Thay YOUR_PASSWORD bằng mật khẩu database user
# Thay YOUR_CLUSTER_URL bằng URL cluster của bạn
# Ví dụ: mongodb+srv://username:password@cluster0.abc123.mongodb.net/recyclehub?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://tuandung2006a_db_user:0lLj37s6FkFPWpLI@recyclehub.4xzcat7.mongodb.net/recyclehub?retryWrites=true&w=majority
# ===========================================
# JWT Configuration
# ===========================================
# JWT Secret - Tạo một chuỗi bí mật dài và ngẫu nhiên (ít nhất 32 ký tự)
# Ví dụ: my_super_secret_jwt_key_for_recyclehub_2025_very_long_and_secure
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_123456789

# JWT Expire Time - Thời gian hết hạn của token
# Các giá trị: 1h, 1d, 7d, 30d, etc.
JWT_EXPIRE=7d

# ===========================================
# Server Configuration
# ===========================================
# Server Port - Cổng chạy server
PORT=5000

# Environment - Môi trường chạy (development, production)
NODE_ENV=development

# ===========================================
# Frontend Configuration
# ===========================================
# Frontend URL - URL của frontend (cho CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# Rate Limiting
# ===========================================
# Rate Limit Window (milliseconds) - Thời gian cửa sổ rate limit
RATE_LIMIT_WINDOW_MS=900000

# Rate Limit Max Requests - Số request tối đa trong cửa sổ thời gian
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Optional: Email Configuration (for future use)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# ===========================================
# Optional: File Upload Configuration
# ===========================================
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# ===========================================
# Instructions:
# ===========================================
# 1. Copy this file: cp env.example .env
# 2. Update MONGODB_URI with your MongoDB Atlas connection string
# 3. Update JWT_SECRET with a strong, random secret key
# 4. Adjust other values as needed
# 5. Never commit .env file to version control
# 6. Test connection: node test-mongodb-atlas.js
